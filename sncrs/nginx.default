server {
    listen 8020;

    location / {
        proxy_pass http://127.0.0.1:8010;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        client_max_body_size 500M;
    }
    location /static {
        root /sncrs/;
    }
    location /media {
        root /sncrs/;
    }
}